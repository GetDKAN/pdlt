{
    "name": "getdkan/pdlt",
    "description": "PHP Date Language Tool",
    "type": "library",
    "authors": [
        {
            "name": "Clayton Liddell",
            "email": "clayton.liddell@civicactions.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": ">=8.3 <8.5 || >8.5.14 <9.5",
        "rector/rector": "^0.15.17",
        "squizlabs/php_codesniffer": "^3.7",
        "drupal/coder": "^8.3"
    },
    "autoload": {
        "psr-4": {
            "PDLT\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PDLT\\tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcbf": "./vendor/bin/phpcbf",
        "phpcs": "./vendor/bin/phpcs",
        "rector": "./vendor/bin/rector process",
        "rector-dry-run": "./vendor/bin/rector process --dry-run",
        "test": "./vendor/bin/phpunit --testsuite all"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
